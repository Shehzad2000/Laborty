
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="row ">
        <div class="col-lg-12">
            <div class="card ">
                <div class="card-header bg-blue">
                    <h5 class="text-white m-b-0">Category</h5>
                </div>
                <div class="card-body">

                    <form>
                        <input type="hidden" id="CatID" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group has-feedback">
                                    <label class="control-label">Category Name</label>
                                    <input class="form-control" id="CategoryName" placeholder="Category Name" type="text">
                                    <span class="fa fa-user form-control-feedback" aria-hidden="true"></span>
                                </div>
                            </div>


                            <div class="col-md-12">
                                <button type="submit" onclick="AddCategory();" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<partial name="Category_Details" />
